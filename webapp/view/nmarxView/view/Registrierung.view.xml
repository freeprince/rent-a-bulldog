<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="rab.controller.nmarxController.Registrierung"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<ScrollContainer id="initialScroller" height="100%" width="100%" horizontal="false" vertical="true" focusable="true">
		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
				<f:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="Registrierung" level="H4" titleStyle="H4"/>
						<ToolbarSpacer/>
					</Toolbar>
				</f:toolbar>
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
						emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title2">
						<f:formElements>							
							<f:FormElement label="Vorname">
								<f:fields>
									<Input value="{Kundendaten>/VORNAME}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Nachname">
								<f:fields>
									<Input value="{Kundendaten>/NACHNAME}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Straße (inkl. Hausnummer)">
								<f:fields>
									<Input value="{Kundendaten>/STRASSE}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Plz, Ort">
								<f:fields>
									<Input value="{Kundendaten>/PLZ}" type="text">
										<layoutData>
											<l:GridData span="XL2 L1 M3 S4"/>
										</layoutData>
									</Input>
									<Input value="{Kundendaten>/ORT}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Geburtsdatum">
								<f:fields>
									<Input value="{Kundendaten>/GEBURTSDATUM}" type="date"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Führerscheinnummer">
								<f:fields>
									<Input value="{Kundendaten>/FNR}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Ausstelldatum des Führerscheins">
								<f:fields>
									<Input value="{Kundendaten>/ausstell_datum}" type="date"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="E-Mail *">
								<f:fields>
									<Input value="{Kundendaten>/EMAIL}" type="text"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Passwort *">
								<f:fields>
									<Input type="Password" value="{Kundendaten>/PASSWORT}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Passwort bestätigen *">
								<f:fields>
									<Input type="Password" value="{Kundendaten>/Passwortbestätigung}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</VBox>
		<FlexBox width="auto" alignItems="Center" justifyContent="Center">
			<Button text="Registrieren" press="registrieren" design="Bold"/>
		</FlexBox>
		<mvc:XMLView viewName="rab.view.Footer"/>
	</ScrollContainer>
</mvc:View>